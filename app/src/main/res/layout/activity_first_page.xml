<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="androidedu.kodluyoruz.currencycalculate.FirstPage">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/spinner_items" />

    <LinearLayout
        android:id="@+id/activity_first_page_layout_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_first_page_tlTutarı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tl_tutarı" />

        <EditText
            android:id="@+id/activity_first_page_tlSigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_zero"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/activity_first_page_comma1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comma"
            android:textAlignment="textEnd" />

        <EditText
            android:id="@+id/activity_first_page__tlDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/double_zero"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="textEnd" />


        <TextView

            android:id="@+id/activity_first_page_TL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tl_ismi" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_first_page_layout_dovız"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_first_page_dovizTutarı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/doviz_tutarı" />

        <EditText
            android:id="@+id/activity_first_page_dovizSigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:hint="@string/hint_zero"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/activity_first_page_comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comma"
            android:textAlignment="textEnd" />

        <EditText
            android:id="@+id/activity_first_page_dovizDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:hint="@string/double_zero"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="textEnd" />


        <TextView

            android:id="@+id/activity_first_page_dovizIsmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/doviz_ismi" />


    </LinearLayout>


    <Button
        android:id="@+id/activity_first_page_buttonchangecurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/change_currency"
        android:textAlignment="center" />

    <!--<include-->
    <!--android:id="@+id/activity_first_page_fristrow"-->
    <!--layout="@layout/activity_firstpage_row"></include>-->
    <!--<include-->
    <!--android:id="@+id/activity_first_page_secondrow"-->
    <!--layout="@layout/activity_firstpage_row"></include>-->
    <!-- tekrarlayan böyle satırları yine ayrı bir layout
    içerisinde tanımla herhangi bir text bilgisi tutma !değişecek text bilgilerini runtime da değiştireceksin
    virgüle id verme değişecek alanlara id ver boşuna hafızada yer kaplamasın.-->

</LinearLayout>
